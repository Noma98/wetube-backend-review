extend ../base 
block content 
    H1 Join 
    if error 
        p=error 
    form(method="POST")
        input(name="userId",type="text",placeholder="ID",required,style="text-transform: lowercase",value=userId)
        input(name="email",type="email",placeholder="Email",required,style="text-transform: lowercase",value=email)
        input(name="name",type="text",placeholder="Name",required,value=name)
        input(name="pwd",type="password",placeholder="PWD",required)
        input(name="pwd2",type="password",placeholder="PWD Confirm",required)
        input(type="submit", value="Join")
